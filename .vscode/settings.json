{
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "editor.formatOnSave": true,

  // other settings
  "tailwindCSS.includeLanguages": {
    "javascript": "typescript",
    "html": "HTML"
  },
  "editor.quickSuggestions": {
    "strings": true
  }
}
